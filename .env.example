# Telegram Bot Configuration
# Получите токен от @BotFather в Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklmnoPQRstuvwxyz1234567890

# StashApp Server Configuration
# URL вашего StashApp сервера
# Для локального сервера:
STASH_URL=http://localhost:9999
# Для сервера в Docker сети:
# STASH_URL=http://stash:9999
# Для удаленного сервера:
# STASH_URL=http://192.168.1.100:9999

# StashApp API Key (опционально)
# Найти можно в Settings -> Security -> API Key в StashApp
STASH_API_KEY=

# Timezone (опционально)
TZ=Europe/Moscow